<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.comlu.kacem.calculator.MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="right"
        android:textSize="45dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/effacer"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="←"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="effacer"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="C"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="clear"/>

        <Button
            android:id="@+id/diviser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="/"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="diviser"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/sept"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="7"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="sept"/>

        <Button
            android:id="@+id/huit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="8"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="huit"/>

        <Button
            android:id="@+id/neuf"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="9"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="neuf"/>

        <Button
            android:id="@+id/multi"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="x"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="multi"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/quatre"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="4"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="quatre"/>

        <Button
            android:id="@+id/cinq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="5"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="cinq"/>

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="6"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="six"/>

        <Button
            android:id="@+id/moins"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="-"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="moins"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/un"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="1"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="un"/>

        <Button
            android:id="@+id/deux"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="2"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="deux"/>

        <Button
            android:id="@+id/trois"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="3"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="trois"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="+"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="plus"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="0"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="zero"/>

        <Button
            android:id="@+id/point"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="."
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="point"/>

        <Button
            android:id="@+id/egale"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="="
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:onClick="egale"/>

    </LinearLayout>

</LinearLayout>
